@using Entidades;
@model Autor

@{
    ViewData["Title"] = "Crear Autor";
}

<div class="mt-4 container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-6">
            <div class="card mb-2 rounded shadow-sm">
                <div class="card-header text-white bg-secondary py-3 d-flex justify-content-center align-items-center">
                    <h3 class="weight-600 m-0 text-center">
                        <i class="fa-solid fa-book"></i> Agregar Autor
                    </h3>
                </div>
                <div class="card-body p-3 rounded shadow">
                    <form asp-action="Crear" method="POST" class="row g-3">
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <label class="form-label"><strong>Nombre:</strong></label>
                            <input id="Titulo"
                                   asp-for="Nombre"
                                   class="form-control form-control-user"
                                   placeholder="Ingresar el nombre" />
                            <span asp-validation-for="Nombre" class="text-danger fw-bold"></span>
                        </div>             
                        <div class="row mt-5 mb-3 mx-auto">
                            <div class="col">
                                <button class="btn btn-success btn-sm w-100">Crear</button>
                            </div>
                            <div class="col">
                                <a asp-controller="Libro" asp-action="Index" class="btn btn-danger btn-sm w-100">Volver</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
