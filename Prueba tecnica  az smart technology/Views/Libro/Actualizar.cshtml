@using Entidades.ViewModel;
@model LibroVM;

@{
    ViewData["Title"] = "Actualizar Libro";
}

<div class="mt-4 container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-6">
            <div class="card mb-2 rounded shadow-sm">
                <div class="card-header bg-light py-3 d-flex justify-content-center align-items-center">
                    <h3 class="weight-600 m-0 text-center">
                        <i class="fa-solid fa-pen"></i> Actualizar Libro
                    </h3>
                </div>
                <div class="card-body p-3 rounded shadow">
                    <form asp-action="Actualizar" method="post" class="row g-3">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Libro.ID" />

                        <div class="form-group">
                            <label class="form-label"><strong>Título:</strong></label>
                            <input id="Titulo"
                                   asp-for="Libro.Titulo"
                                   class="form-control form-control-user"
                                   placeholder="Ingresar el título" />
                            <span asp-validation-for="Libro.Titulo" class="text-danger fw-bold"></span>
                        </div>

                        <div class="form-group">
                            <label class="form-label"><strong>Autor:</strong></label>
                            @Html.DropDownListFor(
                                     l => l.Libro.AutorID,
                                     Model.ListaAutores,
                                     new { @class = "form-control-user form-select" })
                            <span asp-validation-for="Libro.AutorID" class="text-danger fw-bold"></span>
                        </div>

                        <div class="row mt-5 mb-3 mx-auto">
                            <div class="col">
                                <button class="btn btn-warning btn-sm w-100 text-white fw-bold">Actualizar</button>
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-danger btn-sm w-100 fw-bold">Volver</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
