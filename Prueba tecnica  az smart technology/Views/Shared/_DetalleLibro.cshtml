@using Entidades
@model Libro

<div class="modal fade" id="modal_detalle_libro" role="dialog" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-secondary text-white">
                <h5 class="modal-title">
                    <i class="fa-solid fa-eye"></i> Detalles del Libro
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="close"></button>
            </div>
            <div class="modal-body">
                <p><strong>ID:</strong> @Model.ID</p>
                <p><strong>Título:</strong> @Model.Titulo</p>
                <p><strong>Autor:</strong> @Model.Autor.Nombre</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal" aria-label="Close">Cerrar</button>
            </div>
        </div>
    </div>
</div>
